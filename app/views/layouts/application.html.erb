    <!DOCTYPE html>
    <html lang="ja">
      <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Webapp</title>
        <%= csrf_meta_tags %>
        <%= stylesheet_link_tag    'application', media: 'all' %>
        <%= stylesheet_link_tag    "#{controller.controller_path}", media: 'all' %>
        <%= javascript_include_tag 'application' %>
      </head>
      <body>
      <div class="container">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>
        <p>
          <%= controller.controller_path %>/<%= controller.action_name %>.html.erb
        </p>
        <p>
          <%= Rails.root %>
        </p>
      </div>
      </body>
    </html>
