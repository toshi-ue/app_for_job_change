<table class="table table-hover table-sm table-responsive">
  <thead>
    <tr>
      <th class="col-4">食材</th>
      <th class="col-4">数</th>
      <th class="col-4"></th>
    </tr>
  </thead>
  <tbody>
    <% @stocks.each do |st| %>
      <tr>
        <td>
          <%# st.rawmaterial_id %>
          <%= st.rawmaterial.name %><br>
          <%# st.rawmaterial.foodcategory.name %>
        </td>
        <td><%= st.quantity %><%= st.rawmaterial.unit.name %></td>
        <td>
          <%= link_to edit_users_stock_path(st.id),  class: "page-link text-dark", role: "button", remote: true do %>
            <i class="fas fa-pen"></i>
          <% end %>
          <div class="d-inline">
            <%= button_to users_stock_path(st.id),  class: "page-link text-dark", role: "button", method: :delete do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
