<div class="content_wrapper container">
  <article class="container">
    <div class="col-xs-10 col-lg-12">
      <h1 class="title">
      <%= @cuisine.name %>
      <span class="difficulty d-none d-lg-inline"> (難易度:<%= @cuisine.difficulty_i18n %></span>
      <span class="cooking_time d-none d-lg-inline">所要時間: 約<%= @cuisine.cooking_time %>分)</span>
      </h1>
    </div>

    <div class="main-image col-xs-10 col-lg-6">
      <%= image_tag @cuisine.main_image.url, class: 'img-fluid' %>
      <div class="share-button">
        <div class="share-button-item">
          <%= link_to "https://twitter.com/share?&text=#{@cuisine.name}&url=#{request.url}", title: 'Twitter', target: '_blank' do %>
            <%= icon('fab', 'twitter fa-2x', class: 'twitter-icon') %>
          <% end %>
        </div>
        <div class="share-button-item">
          <%= icon('far', 'star fa-2x', class: 'copy-url-icon') %>
        </div>
        <div class="share-button-item">
          <a class="btn-clipboard" data-clipboard-text="<%= "#{request.url}" %>">
            <%= icon('fas', 'link fa-2x', class: 'copy-url-icon') %>
          </a>
        </div>
      </div>
    </div>

    <%# display only mobile%>
    <div class="time-and-difficulty col-xs-12 d-lg-none">
      <div class="difficulty col-xs-6 text-center">
        難易度:<br>
        <%= @cuisine.difficulty_i18n %>
      </div>
      <div class="cooking_time col-xs-6 text-center">
        所要時間:<br>
        約<%= @cuisine.cooking_time %>分
      </div>
    </div>
    <div class="foodstuffs col-lg-6">
      <p><%= @cuisine.description %></p>

      <h3 class="d-none d-md-block">食材</h3>
      <% @foodstuffs.each_with_index do |fs| %>
        <%# binding.pry%>
        <div class="foodstuff-list">
          <span class="food-name text-left"><%= disp_foodstuff(fs) %></span>
          <span class="food-quantity float-right"><%= disp_quantity(fs) %></span>
        </div>
      <% end %>
    </div>
    <div class="procedure col-lg">
      <h3 class="d-none d-md-block">手順</h3>
      <% @procedures.each_with_index do |pd, idx| %>
        <div class="procedure-list"><%= idx + 1 %>. <%= pd.cooking_detail %></div>
      <% end %>
    </div>
  </article>


</div>
