<div class="col-6 col-md-3 align-items-xl-center px-2 mt-2 swiper-slide">
  <div class="card">
    <%= link_to cuisine_path(cuisine) do %>
      <div class="img-filter">
        <%= image_tag cuisine.main_image.url, class: "img-fluid card-img-top w-100 d-block" %>
      </div>
    <% end %>
    <div class="card-body">
      <%= link_to cuisine_path(cuisine) do %>
        <p class="card-title text-black-50 d-flex align-items-center"><%= cuisine.name.truncate(14) %></p>
      <% end %>
      <div class="btns d-flex justify-content-end">
        <div id="btn-favorite-<%= cuisine.id %>" class="btns-favorite">
          <%= render partial: 'favorite', locals: {cuisine: cuisine} %>
        </div>
        <div id="btn-today-<%= cuisine.id %>" class="btns-today">
          <%= render partial: 'today', locals: {cuisine: cuisine} %>
        </div>
      </div>
    </div>
  </div>
</div>
