<% if user_signed_in? %>
  <% if current_user.already_favorite?(cuisine) %>
    <%= link_to cuisine_remove_favorite_path(cuisine.id), class: 'btn btn-warning rounded-circle', method: :delete, remote: true do %>
      <i class="far fa-bookmark"></i>
    <% end %>
  <% else %>
    <%= link_to cuisine_add_favorite_path(cuisine.id), class: 'btn btn-outline-secondary rounded-circle', method: :post, remote: true do %>
      <i class="far fa-bookmark"></i>
    <% end %>
  <% end %>
<% else %>
  <%= link_to new_user_session_path, class: 'btn btn-outline-secondary rounded-circle', local: true do %>
    <i class="far fa-bookmark"></i>
  <% end %>
<% end %>
