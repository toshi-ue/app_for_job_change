<%= javascript_pack_tag 'manageownfoodstuffs' %>

<div class="content-header">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 col-md-8 offset-md-2 text-center mt-3">
        <div class="page-title m-0 d-inline">食材の追加</div>
        <div>(<%= @cuisine.name %>)</div>
      </div>
    </div>
  </div>
</div>

<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6 offset-md-3">
          <%= form_with(model: @foodstuff, url: manageownfoodstuffs_path, method: :post, local: true) do |form| %>
              <%= render 'layouts/flash_message' %>
              <%= render 'shared/error_messages', {resource: @foodstuff} if @foodstuff.errors.any? %>
              <%= render 'form', {form: form , cuisine: @cuisine} %>
              <div class="col-10 offset-1">
              <%= form.submit "追加する", class: 'btn btn-success btn-block' %>
              </div>
              <div class="col-10 offset-1 mt-2">
                <%= link_to "手順登録へ", new_managers_procedure_path(cuisine_id: @cuisine.id),  class: "btn btn-outline-secondary btn-block" %>
              </div>
          <% end %>
      </div>
      <div class="col-md-6 offset-md-3">
        <div>
          <div class="row">
            <div class="col-sm-12 col-md-6"></div>
            <div class="col-sm-12 col-md-6"></div>
          </div>
          <div class="row mt-3">
            <div class="col-sm-12">
              <% if @foodstuffs.present? %>
                <table id="table-sortable-procedure" class="table table-bordered table-hover">
                  <tbody>
                    <% @foodstuffs.each do |foodstuff| %>
                    <tr id="foodstuff_<%= foodstuff.id %>">
                      <td class="align-middle" style="width: 40%"><%= foodstuff.rawmaterial.name %></td>
                      <td class="align-middle" style="width: 30%"><%= foodstuff.quantity %><%= foodstuff.rawmaterial.unit.name unless foodstuff.quantity.start_with?("適量", "少々", "お好みで") %></td>

                      <td class="align-middle" style="width: 30%">
                        <%= link_to edit_manageownfoodstuff_path(foodstuff.id),
                              class: "btn btn-default btn-outline-secondary",
                              local: true do %>
                          <i class="fas fa-pen"></i>
                        <% end %>
                        <%= link_to manageownfoodstuff_path(foodstuff.id),
                          class: "btn btn-default btn-outline-secondary mt-1 mt-md-0",
                          method: :delete do %>
                          <i class="far fa-trash-alt"></i>
                        <% end %>
                      </td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              <% else %>
                <div class="text-center">
                  <p>まだ登録がありません</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-8 offset-2 col-md-4 offset-4 mt-3">
         <%= link_to '戻る', 'javascript:history.back()', class: 'btn btn-outline-secondary btn-block' %>
      </div>
    </div>
  </div>
</div>
