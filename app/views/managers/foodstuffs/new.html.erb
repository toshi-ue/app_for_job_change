<%= javascript_pack_tag 'managers/foodstuffs' %>
<%= @cuisine.name %>
<%= params[:cuisine_id] %>

<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 d-inline">料理レシピ食材の追加</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item">
            <%= link_to 'Home', managers_dashboard_path, {class: "text-muted"} %>
          </li>
          <li class="breadcrumb-item">
            <%= link_to '料理レシピ', managers_cuisines_path, {class: "text-muted"} %>
          </li>
          <li class="breadcrumb-item">
            <%= link_to "#{@cuisine.name}", managers_cuisine_path(@cuisine.id), {class: "text-muted"} %>
          </li>
          <li class="breadcrumb-item active">料理レシピ食材の追加</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="card">
          <%= form_with(model: @foodstuff, url: managers_foodstuffs_path, method: :post, local: true) do |form| %>
            <div class="card-body">
              <%= render 'shared/new_error_messages', {resource: @foodstuff} if @foodstuff.errors.any? %>
              <%= render 'form', {form: form , cuisine: @cuisine} %>
            </div>
            <div class="card-footer">
              <%= form.submit "追加する", class: 'btn btn-secondary' %>
              <div class="float-right">
                <%= link_to "手順登録へ", new_managers_procedure_path(cuisine_id: @foodstuff.cuisine_id),  class: "btn btn-secondary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>





<%= form_with(model: @foodstuff, url: managers_foodstuffs_path, local: true) do |form| %>
<% end %>

<div class="col-10 offset-1">
  <% if @registered_foodstuffs.blank? %>
  <div class="text-center">
    <p>登録がまだありません</p>
  </div>
  <% else %>
  <table>
    <thead>
      <tr>
        <td>食材</td>
        <td>数量</td>
      </tr>
    </thead>
    <tbody>
      <% @registered_foodstuffs.each do |rfs| %>
      <tr>
        <td class="col-6"><%= rfs.rawmaterial.name %></td>
        <td class="col-6"><%= rfs.quantity %><%= rfs.rawmaterial.unit.name %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
</div>

<%= render 'shared/back_previous' %>
<%= render 'managers/shared/back_to_home' %>
