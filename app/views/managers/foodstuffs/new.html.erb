<%= javascript_pack_tag 'managers/foodstuffs' %>
<%= render 'shared/error_messages', {resource: @foodstuff} if @foodstuff.errors.any? %>

<div class="search_rawmaterial col-10 offset-1">
  <%= form_with(url: search_rawmaterial_managers_foodstuffs_path, method: :get, local: true) do |f| %>
    <%= f.label :keyword %>
    <%= f.text_field :keyword, id: :search_rawmaterial, class: 'form-control', placeholder:'追加したい食材を入力してください' %>
  <% end %>
</div>
<%# 選択された原材料を表示する %>
<%# TODO: 実装できたらhidden_fieldに変更 %>
<div id="choiced_rawmaterial" class="col-10 offset-1 my-2 border border-dark rounded alert-dismissible fade show">
  <p id="rawmaterial_name" class="text-break"></p>
  <button id="btnResetRawmaterial" type="button" class="close" aria-label="閉じる">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<%= form_with(model: @foodstuff, url: managers_foodstuffs_path, local: true) do |form| %>
  <%= render 'foodstuff_form', {form: form , foodstuff: @foodstuff} %>
  <div class="text-center">
    <%= form.submit class: 'btn btn-secondary' %>
  </div>
<% end %>

<%= render 'shared/back_previous' %>
<%= render 'managers/shared/back_to_home' %>
