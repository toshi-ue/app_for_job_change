<tbody>
  <tr>
    <td><%= foodcategory.id %></td>
    <td><%= foodcategory.name %></td>
    <%# TODO: 使われている原材料の数をカウントする %>
    <td><%# foodcategory.foodstuffs.count %></td>
    <td>
      <%= link_to edit_managers_foodcategory_path(foodcategory.id),
            class: "btn btn-default",
            role: "button",
            local: true do %>
        <i class="fas fa-pen"></i>
      <% end %>
      <%= link_to managers_foodcategory_path(foodcategory.id),
        class: "btn btn-default",
        data: {
        confirm: "
          「#{foodcategory.name}」を削除しますか?",
          cansel: "キャンセル",
          commit: "削除",
          title: "削除確認"
        },
        role: "button",
        method: :delete do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </td>
  </tr>
</tbody>
