<table class="table table-hover table-sm table-responsive">
  <thead>
    <tr>
      <th>ID</th>
      <th>メイン画像</th>
      <th>料理レシピ名</th>
      <th>お手軽度</th>
      <th>調理時間(分)</th>
      <th>登録日</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cuisines.each do |cn| %>
    <% if cn.present? %>
    <tr>
      <td><%= cn.id %></td>
      <% if cn.main_image.present? %>
      <td>
        <%# cn.main_image %>
        <%= image_tag cn.main_image.url, size: '70x70' %>
      </td>
      <% else %>
      <td> 未登録 </td>
      <% end %>
      <td><%= cn.name %></td>
      <td><%= cn.difficulty_i18n %></td>
      <td><%= cn.cooking_time %></td>
      <td><%= cn.created_at %></td>
      <td><%= link_to '詳細', managers_cuisine_path(cn.id),  class: "page-link text-dark d-inline-block", role: "button" %></td>
      <td><%= link_to '修正', edit_managers_cuisine_path(cn.id),  class: "page-link text-dark d-inline-block", role: "button" %></td>
      <td><%= button_to '削除', managers_cuisine_path(cn.id),  class: "page-link text-dark d-inline-block", role: "button", method: :delete %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
