<table class="table table-hover table-sm table-responsive">
  <thead>
    <tr>
      <th>ID</th>
      <th>メイン画像</th>
      <th>料理レシピ名</th>
      <th>お手軽度</th>
      <th>調理時間(分)</th>
      <th>摂取カロリー</th>
      <th>登録日</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cuisines.each do |fc| %>
      <% if fc.undiscarded? %>
      <tr>
        <td><%= fc.id %></td>
        <td><%= fc.main_image %></td>
        <td><%= fc.name %></td>
        <td><%= fc.difficulty %></td>
        <td><%= fc.cooking_time %></td>
        <td><%= fc.calories %></td>
        <td><%= fc.created_at %></td>
        <td><%= link_to '修正', edit_managers_cuisine_path(fc.id),  class: "page-link text-dark d-inline-block", role: "button" %></td>
        <td><%= button_to '削除', managers_cuisine_path(fc.id),  class: "page-link text-dark d-inline-block", role: "button", method: :delete %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
