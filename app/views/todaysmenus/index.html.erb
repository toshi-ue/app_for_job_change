<%= javascript_pack_tag 'todaysmenus' %>
<div class="row">
  <div class="col-sm-10 col-md-8 col-lg-6 offset-sm-1 offset-md-2 offset-lg-3">
    <%= render "shared/flash_messages" %>
    <div class="page-title text-center">今日の献立<br>(Todaysmenu)</div>
    <div>
      <% if @todaysmenus.present? %>
        <table class="table table-hover">
          <tbody>
            <%= render partial: "todaysmenu", collection: @todaysmenus, as: "todaysmenu" %>
          </tbody>
        </table>
        <!-- TODO: 料理が完了するformを作成する-->
        <div class="btn-cooked-when">
        <%= form_with url: cooked_done_todaysmenus_path do |f| %>
        <div class="form-group row">
          <div class="col-sm-12 btn-group" data-toggle="buttons">
            <label class="btn btn-outline-warning active">
              <%= f.radio_button :cooked_when, 1, {checked: true} %> 朝
            </label>
            <label class="btn btn-outline-warning">
              <%= f.radio_button :cooked_when, 2, {} %> 昼
            </label>
            <label class="btn btn-outline-warning">
              <%= f.radio_button :cooked_when, 3, {} %> 夜
            </label>
          </div>
          <div>
            <%= f.submit "Done!!",class: "btn-default__btn-red" %>
          </div>
        </div>
        <% end %>
        </div>
      <% else %>
          <div class="text-center search-btn">
            <p class="text-muted no-todaysmenus-description">本日の献立はまだありません<br>追加しましょう!!</p>
            <p class="text-center">
              <%= link_to favorites_path do %>
                <button class="btn btn-warning">Favoriteへ</button>
              <% end %>
            </p>
            <p class="text-center">
              <%= link_to root_path do %>
                <button class="btn btn-warning">一覧から探す</button>
              <% end %>
            </p>
          </div>
      <% end %>
    </div>
  </div>
</div>
