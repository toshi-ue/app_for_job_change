<div class="main">
  <section class="main__block">
    <%= form_with model:@item, local:true do |f| %>
    <h2 class="sell__block__head">商品の情報を入力</h2>
    <div class="sell__block__form">
      <div class="sell__block__form__upload">
        <h3 class="sell__block__form__upload__head">
          出品画像
          <span class="require">必須</span>
        </h3>
        <p>最大10枚までアップロードできます</p>
        <div id="image-box-1">
          <div class="item-num-0" id="image-box__container">
            <%= f.fields_for :images do |i| %>
            <div class="input-area">
              <%= f.file_field :image, type: 'file', name: "item[images_attributes][][image_url]", value:"", style: "display:none", id:"img-file" %>
              <label for="img-file"></label>
              <i class="fas fa-camera"></i>
            </div>
          </div>
        </div>

      </div>
      <div class="sell__block__form__name">
        <div class="form-group__name">
          <label for="">商品名</label>
          <span>必須</span>
          <div>
            <%= f.text_field :name, placeholder:"商品名（必須 40文字まで)",class: "form__group__name" %>
          </div>
        </div>
      </div>
      <div class="sell__block__form__btn">
        <div>
          <%= f.submit "出品する",class: "btn-default__btn-red" %>
        </div>
      </div>
    </div>
  </section>
</div>


